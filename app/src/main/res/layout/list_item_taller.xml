<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >
    <LinearLayout
        android:id = "@+id/taller_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/cutomborder"
        android:descendantFocusability="blocksDescendants"
        >

        <TextView
            android:id="@+id/txt_nombreTaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Javier Prado"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/txt_tipoServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Servicio Diurno y Expres"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/txt_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Av. Javier Prado 5635 - La Molina"
            android:textSize="20dp"
            />

    </LinearLayout>
</LinearLayout>